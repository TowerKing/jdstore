<div class="container store-content">
  <div class="row gray-box">
    <% if current_cart.cart_items.count > 0 %>
      <div class="page-cart">
        <div class="title pre-title">
          <h2>购物清单</h2>
        </div>

        <div class="ui-cart">
          <div class="cart-table-title">
            <span class="name">商品名称</span>
            <span class="operation">操作</span>
            <span class="subtotal">小计</span>
            <span class="num">数量</span>
            <span class="price">单价</span>
          </div>
          <div class="cart-table">
            <div class="cart-group">
              <% current_cart.cart_items.each do |cart_item| %>
                <div class="cart-top-items">
                  <div class="cart-items">
                    <div class="items-thumb">
                      <%= link_to product_path(cart_item.product) do %>
                        <% if cart_item.product.image.present? %>
                          <%= image_tag(cart_item.product.image.thumb.url, class: "thumbnail") %>
                        <% else %>
                          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                        <% end %>
                      <% end %>
                    </div>
                    <div class="name">
                      <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
                    </div>
                    <div class="operation">
                      <%= link_to("删除", cart_item_path(cart_item.product_id), method: :delete, class: "btn btn-sm btn-danger fa fa-trash") %>
                    </div>
                    <div class="subtotal">
                      $<%= cart_item.product.price * cart_item.quantity %>
                    </div>
                    <div class="item-cols-num">
                      <%= form_for cart_item, url: cart_item_path(cart_item.product_id) do |f| %>
                        <%= f.select :quantity, 1..cart_item.product.quantity %>
                        <%= f.submit "更新", data: { disable_with: "Submiting..."} %>
                      <% end %>
                    </div>
                    <div class="price">
                      $<%= cart_item.product.price %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <div class="cart-bottom-bg fix-bottom">
            <div class="cart-bar-operation">
              <div class="empty-carts">
                <%= link_to("清空购物车", clean_carts_path, method: :delete, data: { confirm: "你确定要清空整个购物车吗？" }) %>
              </div>
            </div>
            <div class="shipping">
              <div class="shipping-status">
                <strong>总计</strong>（不含运费）:
                <i class="total-price highlight">$ <%= render_cart_total_price(current_cart) %> </i>
                <%= link_to("确认结账", checkout_carts_path, method: :post, class: "btn btn-lg btn-primary") %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% else %>
        <div class="page-cart">
          <div class="title pre-title">
            <h2>购物清单</h2>
          </div>
          <div class="ui-cart empty-ui-cart">
            <div class="empty-label">
              <h3></h3>
              <%= link_to '现在选购', products_path, :class => 'link' %>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>
