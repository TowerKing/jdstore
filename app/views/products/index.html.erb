    <li data-target="#china-carousel" data-slide-to="1"></li>
    <li data-target="#china-carousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <img src="http://i01.appmifile.com/webfile/globalimg/tw/cms/CCC61556-904B-C8DF-F865-A2040C0154EF.jpg" alt="...">
      <div class="carousel-caption">
        ...
      </div>
    </div>
    <div class="item">
      <img src="http://i01.appmifile.com/webfile/globalimg/tw/cms/92A96591-4B50-EFB1-F2FE-BA12BE653D96.jpg" alt="...">
      <div class="carousel-caption">
        ...
      </div>
    </div>
    <div class="item">
      <img src="http://i01.appmifile.com/webfile/globalimg/tw/cms/1820559D-0C7F-7D70-F670-475037C2B2A2.jpg" alt="...">
      <div class="carousel-caption">
        ...
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#china-carousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#china-carousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<div class="products">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-2">
        <div class="product-item">
          <div class="product-img">
            <% if product.image.present? %>
              <%= link_to image_tag(product.image.thumb.url), product_path(product) %>
            <% else %>
              <%= link_to image_tag("http://placehold.it/200x200&text=No Pic"), product_path(product) %>
            <% end %>
          </div>
          <div class="product-title">
            <%= link_to product.title, product_path(product) %>
          </div>
          <div class="product-price">
            $<%= product.price %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
